<?php  
	$background  = $this->getBackgroundImage($this->getSkinUrl('images/testimonial_bg.png'));
	$_reviews = $this->getReviews();
	
?>

<section class="testimonials" style="background-image:url(<?php echo $background['image_url'] ?>); ">
	<div class="container">	
		<?php if($_reviews): ?>
				<h2>Testimonials</h2>
				<div id="owl-testimonials" class="owl-carousel"> 
					<?php foreach($_reviews as $review): ?> 
					  <div class="item"> 
					  		<div class="ratingbox">
					    		<div class="ui large star rating" data-rating="<?php echo ($this->getAverageRating($review)/100 *5) ?>" data-max-rating="5"></div>
					    	</div>
					  		<p><?php echo $review->getDetail()?></p>
					  		<div><strong> - <?php echo $review->getNickname()?></strong></div>
					  </div> 
					<?php endforeach; ?>
				</div>
		<?php endif; ?>
	</div>	
</section>

