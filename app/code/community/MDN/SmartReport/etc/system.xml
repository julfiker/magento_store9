<?xml version="1.0"?>
<config>
    <sections>
        <smartreport translate="label" module="SmartReport">
            <label>Reports configuration</label>
            <tab>advanced</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>

                <general>
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <version>
                            <label>Module version</label>
                            <frontend_model>SmartReport/Adminhtml_System_Config_Version</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </version>
                    </fields>
                </general>

                <attributes>
                    <label>Attributes</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>23</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <manufacturer_attribute>
                            <label>Manufacturer attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>SmartReport/System_Config_Source_ProductAttributeId</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </manufacturer_attribute>
                    </fields>
                </attributes>

                <dashboard>
                    <label>Dashboard</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>23</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <reports>
                            <label>Reports to display</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>SmartReport/System_Config_Source_ReportsForDashboard</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </reports>
                    </fields>
                </dashboard>

                <filters>
                    <label>Filters</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <group>
                            <label>Default group by</label>
                            <frontend_type>select</frontend_type>
                            <source_model>SmartReport/System_Config_Source_GroupByDate</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </group>
                        <period>
                            <label>Default period</label>
                            <frontend_type>select</frontend_type>
                            <source_model>SmartReport/System_Config_Source_Periods</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </period>
                        <order_statuses>
                            <label>Order statuses</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>If you select some statuses, only the sales orders with these statuses will be used in report results.</comment>
                        </order_statuses>
                    </fields>
                </filters>

                <misc>
                    <label>Miscellaneous</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <days_for_all_stock>
                            <label>Days for old stock</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Fill the number of days to consider a product as old stock</comment>
                        </days_for_all_stock>
                    </fields>
                </misc>

            </groups>
        </smartreport>
    </sections>
</config>           